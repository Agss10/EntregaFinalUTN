
<div class="container" style="margin-top: 0px;">
    {{!-- inicio fila 1 --}}
  
    {{!-- fin fila 1 --}}

    {{!-- inicio fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px ;">
            <h2 class="titulo-novedades">PROYECTOS</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo</a>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    {{!-- inicio fila 3 --}}
    <div class="row row-table">
        <div class="col">
            <table class="table ">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Subtitulo</th>
                        <th scope="col" class=" text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row" class="relleno">{{id}}</th>
                        <td class="relleno">{{titulo}}</td>
                        <td class="relleno">{{{subtitulo}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i 
                            class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i 
                            class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
